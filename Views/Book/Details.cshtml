@model BookStore.Models.Book

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>

<body>

    <div>
        <h4>Book</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.bookId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.bookId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.bookName)
            </dt>
            <dd class="col-sm-10">
